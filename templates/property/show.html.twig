{% extends 'base.html.twig' %} {% block title property.title %} {% block body %}

<div class="bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {% if property.filename %}
                <br>
                <img src="/images/properties/{{ property.filename }}" alt="card-img-top" style="width:100% ; height: auto;"> {% else %}
                <img src="/images/properties/arton.jpg" alt="card-img-top" style="width: 100% ; height: auto;"> {% endif %}
            </div>
            <div class="col-md-4 ">
                <h1>{{property.title}}</h1>
                <h2>{{ property.rooms }} pièces - {{ property.surface}} m2</h2>
                <div class="text-primary " style="font-size: 4rem; font-weight: bold; "> {{property.price | number_format(0,'',' ')}} Fcfa</div>
                <a href=" " class="btn btn-primary "> Contacter l'agence</a>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4 text-center ">

</div>

<p class="text-center ">
    {{ property.description |nl2br }}
</p>
<div class="row ">

    <div class="col-md-4 ">

    </div>
    <div class="col-md-4 ">
        <h2>Caracteristiques</h2>
        <table class="table table-striped ">
            <tr>
                <td> Surface habitable</td>
                <td>{{ property.surface}} m2</td>
            </tr>
            <tr>
                <td>Pièces</td>
                <td>{{ property.rooms}}</td>
            </tr>
            <tr>
                <td>Chambres</td>
                <td>{{property.bedrooms}}</td>
            </tr>
            <tr>
                <td>Etages</td>
                <td>{{property.floor}}</td>
            </tr>
            <tr>
                <td>Chauffage</td>
                <td>{{property.heat}}</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4 ">
        <h2>Specificités</h2>
        <ul class="list-group">
            {% for option in property.options%}
            <li class="list-group-item">
                {{option.name}}
            </li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock%}